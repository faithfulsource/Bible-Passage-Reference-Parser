{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./js",
    "rootDir": "./src",

    /* Strict Type-Checking Options */
    "strict": true,
    "alwaysStrict": false,

    /* Module Resolution Options */
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitUseStrict": true
  },
  "include": ["./src"],
  "exclude": ["**/spec.ts", "**/translation_alternates.ts", "**/psalm_cb.ts"]
}
